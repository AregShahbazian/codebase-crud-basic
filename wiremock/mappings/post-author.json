{
  "request": {
    "method": "POST",
    "urlPath": "/author",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?(@.name == 'Author 3' && @.dateOfBirth == '03-03-1993')]"
      }
    ]
  },
  "response": {
    "status": 201,
    "headers": {
      "Access-Control-Allow-Origin" : "*",
      "Location": "/author/3"
    },
    "bodyFileName": "author_3.json",
    "transformers": [
      "response-template"
    ]
  }
}
